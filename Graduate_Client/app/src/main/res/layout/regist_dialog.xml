<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="@dimen/dialog_corner">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/inputDialog_textSize" />

        <TextView
            android:id="@+id/textView_tips"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textSize="@dimen/inputDialog_textSize"
            android:hint="Tips"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="用户名："
                android:gravity="center"
                android:textSize="@dimen/inputDialog_textSize" />

            <EditText
                android:id="@+id/editText_accountName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:maxLength="6"
                android:background="@drawable/edittext_style"
                android:textSize="@dimen/dialog_edittext_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="密  码:"
                android:gravity="center"
                android:textSize="@dimen/inputDialog_textSize" />

            <EditText
                android:id="@+id/editText_accountPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:maxLength="6"
                android:textSize="@dimen/dialog_edittext_textsize"
                android:background="@drawable/edittext_style" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="确认密码:"
                android:gravity="center"
                android:textSize="@dimen/inputDialog_textSize" />

            <EditText
                android:id="@+id/editText_passsordConfirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:maxLength="6"
                android:textSize="@dimen/dialog_edittext_textsize"
                android:background="@drawable/edittext_style"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/linearlayout_top_style"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_confirm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/textview_confirm_style"
                android:gravity="center"
                android:text="立即注册"
                android:textSize="@dimen/inputDialog_textSize" />

            <TextView
                android:id="@+id/textView_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textSize="@dimen/inputDialog_textSize" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>